{
  "extends": ["config:base"],
  "baseBranches": ["develop"],
  "ignorePaths": ["package/**"],
  "stabilityDays": 3,
  "dependencyDashboard": true,
  "dependencyDashboardLabels": ["maintenance", "dependencies"],
  "major": {
    "dependencyDashboardApproval": true,
    "labels": ["major", "C_dependencies"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "squash",
      "labels": ["C_dependencies"]
    },
    {
      "matchManagers": ["npm"],
      "addLabels": ["npm"],
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github-actions"],
    }
  ]
}
