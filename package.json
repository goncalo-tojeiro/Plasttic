{
  "name": "plasttic",
  "private": true,
  "type": "module",
  "version": "1.4.4",
  "description": "HTML Boilerplate, Atomic Design Sass Framework and Knowledge Hub",
  "keywords": [
    "plasttic",
    "template",
    "boilerplate",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monkey13-ws/Plasttic.git"
  },
  "author": "Monkey13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monkey13-ws/Plasttic/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "docs/CHANGELOG.md",
    "docs/README.md",
    ".vscode/extensions.json",
    ".gitattributes",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/monkey13-ws/Plasttic#readme",
  "scripts": {
    "dev": "concurrently npm:copy npm:watch npm:postdev",
    "build:sass": "sass  --no-source-map src/assets/scss:public/assets/scss",
    "copy": "concurrently -n w: npm:copy:*",
    "copy:root": "copyfiles -u 1 ./src/* ./src/.htaccess public",
    "copy:private": "copyfiles -u 1 -a ./src/private/**/* public",
    "copy:assets": "copyup -u 1 ./src/assets/**/* ./src/assets/**/**/* -e=./src/assets/scss/**/* public",
    "watch": "concurrently -n w: npm:watch:*",
    "watch:html": "onchange 'src/*.html' -- npm run copy:html",
    "watch:private": "onchange 'src/private/**/*' -- npm run copy:private",
    "watch:css": "onchange 'src/assets/css/*' -- npm run copy:assets",
    "watch:sass": "sass  --no-source-map --watch src/assets/scss/styles.scss:public/assets/scss/styles.css",
    "serve": "browser-sync start --server public --files public",
    "build": "npm-run-all copy:html build:*",
    "postdev": "postcss public/assets/css/styles.css -u postcss-custom-media autoprefixer -r --no-map",
    "postbuild": "postcss public/css/*.css public/scss/*.css -u autoprefixer cssnano -r --no-map"
  },
  "main": "index.html",
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "onchange": "^7.1.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "sass": "^1.55.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0",
    "vite": "^3.2.1"
  }
}
