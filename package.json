{
  "name": "plasttic",
  "type": "module",
  "version": "2.0",
  "description": "HTML Boilerplate, Atomic Design CSS Framework and Best Practices Template",
  "keywords": [
    "plasttic",
    "template",
    "boilerplate",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tojeiro-me/Plasttic.git"
  },
  "author": "Goncalo Tojeiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tojeiro-me/Plasttic/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "docs/CHANGELOG.md",
    "docs/README.md",
    ".vscode/extensions.json",
    ".gitattributes",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/tojeiro-me/Plasttic",
  "scripts": {
    "dev": "concurrently npm:start:dev npm:watch:* npm:sync",
    "build": "concurrently npm:start:build",
    "copy:css": "postcss src/assets/css/*.css --no-map --dir public/assets/css/ && npm run del:css:atomic",
    "copy:fonts": "copyfiles -u 1 -a ./src/assets/fonts/* public",
    "copy:img": "copyfiles -u 1 -a ./src/assets/img/**/* public",
    "copy:js": "make-dir public/assets/js/ && uglifyjs 'src/assets/js/*.js' -o 'public/assets/js/scripts.min.js'",
    "copy:private": "copyfiles -u 1 -a ./src/private/**/* public",
    "copy:root": "copyfiles -u 1 -a ./src/* ./src/.htaccess public",
    "del:css": "del ./public/assets/css/*  && npm run copy:css",
    "del:css:atomic": "del ./public/assets/css/* !./public/assets/css/styles.css !./public/assets/css/print.css",
    "del:fonts": "del ./public/assets/fonts/* && npm run copy:fonts",
    "del:img": "del ./public/assets/img/* && npm run copy:img",
    "del:js": "del ./public/assets/js/* && npm run copy:js",
    "del:private": "del ./public/private/* ./public/private/.htaccess && npm run copy:private",
    "del:public": "del ./public/* ./public/**/* ./public/.htaccess",
    "del:root": "del ./public/*.* ./public/.htaccess && npm run copy:root",
    "mini:html": "rehype --setting allowDangerousCharacters:true public/*.html  --use format --use remove-comments --use minify-css-style --use minify-javascript-script --output public",
    "start:build": "npm run del:public && concurrently npm:copy:* npm:mini:*",
    "start:dev": "npm run del:public && concurrently npm:copy:* npm:mini:html",
    "sync": "browser-sync start --port 5500 --no-open --server public --files public",
    "watch:css": "onchange -d 10000 'src/assets/css/*' -- npm run del:css",
    "watch:fonts": "onchange -d 10000 'src/assets/fonts/*' -- npm run del:fonts",
    "watch:img": "onchange -d 10000 'src/assets/img/*' 'src/assets/img/**/*' 'src/assets/img/**/**/*' -- npm run del:img",
    "watch:js": "onchange -d 10000 'src/assets/js/**/*' -- npm run del:js",
    "watch:private": "onchange -d 10000 'src/private/**/*' -- npm run del:private",
    "watch:root": "onchange -d 10000 'src/*' -- npm run del:root"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "del-cli": "^5.0.0",
    "engine.io": "^6.2.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-wesbos": "^3.1.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vue": "^9.8.0",
    "imageoptim-cli": "^3.0.7",
    "lighthouse": "^9.6.8",
    "make-dir-cli": "^3.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "postcss-custom-media": "^9.0.1",
    "postcss-import": "^15.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "puppeteer": "^19.4.0",
    "rehype": "^12.0.1",
    "rehype-cli": "^11.0.1",
    "rehype-format": "^4.0.1",
    "rehype-minify-css-style": "^3.0.0",
    "rehype-minify-javascript-script": "^4.0.0",
    "rehype-minify-whitespace": "^5.0.1",
    "rehype-remove-comments": "^5.0.0",
    "sass": "^1.56.1",
    "socket.io": "^4.5.4",
    "svgexport": "^0.4.2",
    "svgo": "^3.0.2",
    "typescript": "^4.9.4",
    "uglify-js": "^3.17.4",
    "vue-eslint-parser": "^9.1.0"
  }
}
