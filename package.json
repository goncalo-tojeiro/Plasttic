{
  "name": "plasttic",
  "private": true,
  "type": "module",
  "version": "1.4.4",
  "description": "HTML Boilerplate, Atomic Design Sass Framework and Knowledge Hub",
  "keywords": [
    "plasttic",
    "template",
    "boilerplate",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monkey13-ws/Plasttic.git"
  },
  "author": "Monkey13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monkey13-ws/Plasttic/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "docs/CHANGELOG.md",
    "docs/README.md",
    ".vscode/extensions.json",
    ".gitattributes",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/monkey13-ws/Plasttic",
  "scripts": {
    "dev": "concurrently npm:copy npm:watch npm:sync",
    "build": "concurrently -n w: npm:copy:* npm:build:* npm:post:build npm:mini:*",
    "build:sass": "sass  --no-source-map src/assets/scss:public/assets/scss",
    "del:public": "del ./public/",
    "copy": "npm run del:public && concurrently -n w: npm:copy:* npm:post:dev && npm run mini:js ",
    "copy:root": "copyfiles -u 1 -a ./src/* ./src/.htaccess public",
    "copy:private": "copyfiles -u 1 -a ./src/private/**/* public",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* ./src/assets/**/**/* ./src/assets/js/vendor/*.js -e=./src/assets/scss/**/* -e=./src/assets/js/*.js public",
    "watch": "concurrently -n w: npm:watch:*",
    "watch:root": "onchange -d 5000 'src/*' -- npm run copy",
    "watch:assets": "onchange -d 5000 'src/assets/**/*' 'src/assets/**/**/*' 'src/assets/**/**/**/*' -- npm run copy",
    "watch:private": "onchange -d 5000 'src/private/**/*' -- npm run copy",
    "watch:sass": "sass  --no-source-map --watch src/assets/scss/styles.scss:public/assets/scss/styles.css",
    "post:dev": "postcss public/assets/css/*.css public/assets/scss/*.css -u postcss-custom-media autoprefixer -r --no-map",
    "post:build": "postcss public/assets/css/*.css public/assets/scss/*.css -u postcss-custom-media autoprefixer cssnano -r --no-map",
    "mini:js": "uglifyjs 'src/assets/js/*.js' -o 'public/assets/js/scripts.min.js'",
    "mini:html": "rehype public/*.html --use remove-comments --use rehype-minify-whitespace --use rehype-minify-css-style --output public",
    "sync": "browser-sync start --port 5500 --no-open --server public --files public",
    "dev:vite": "vite --port 5500"
  },
  "main": "index.html",
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "del-cli": "^5.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "rehype": "^12.0.1",
    "rehype-cli": "^11.0.1",
    "rehype-minify-css-style": "^3.0.0",
    "rehype-minify-whitespace": "^5.0.1",
    "rehype-remove-comments": "^5.0.0",
    "sass": "^1.55.0",
    "uglify-js": "^3.17.4",
    "vite": "^3.2.1"
  }
}
