{
  "name": "plasttic",
  "private": true,
  "type": "module",
  "version": "1.4.4",
  "description": "HTML Boilerplate, Atomic Design Sass Framework and Knowledge Hub",
  "keywords": [
    "plasttic",
    "template",
    "boilerplate",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monkey13-ws/Plasttic.git"
  },
  "author": "Monkey13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monkey13-ws/Plasttic/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "docs/CHANGELOG.md",
    "docs/README.md",
    ".vscode/extensions.json",
    ".gitattributes",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/monkey13-ws/Plasttic",
  "scripts": {
    "dev": "concurrently npm:copy npm:watch npm:sync",
    "build": "concurrently -n w: npm:clear:* npm:copy:* npm:build:* npm:postbuild npm:strip:*",
    "build:sass": "sass  --no-source-map src/assets/scss:public/assets/scss",
    "clear:public": "del ./public/",
    "copy": "concurrently -n w: npm:copy:* npm:postdev",
    "copy:root": "copyfiles -u 1 -a ./src/* ./src/.htaccess public",
    "copy:private": "copyfiles -u 1 -a ./src/private/**/* public",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* ./src/assets/**/**/* -e=./src/assets/scss/**/* public",
    "watch": "concurrently -n w: npm:watch:*",
    "watch:html": "onchange -d 5000 'src/*.html' -- npm run copy:html",
    "watch:private": "onchange -d 5000 'src/private/**/*' -- npm run copy:private",
    "watch:css": "onchange -d 5000 'src/assets/css/*' -- npm run copy",
    "watch:scss": "onchange -d 5000 'src/assets/scss/*' -- npm run copy",
    "watch:sass": "sass  --no-source-map --watch src/assets/scss/styles.scss:public/assets/scss/styles.css",
    "postdev": "postcss public/assets/css/*.css public/assets/scss/*.css -u postcss-custom-media autoprefixer -r --no-map",
    "postbuild": "postcss public/assets/css/*.css public/assets/scss/*.css -u postcss-custom-media autoprefixer cssnano -r --no-map",
    "strip:js": "uglifyjs public/assets/js/*.js --compress false",
    "sync": "browser-sync start --port 5500 --no-open --server public --files public",
    "dev:vite": "vite --port 5500"
  },
  "main": "index.html",
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "del-cli": "^5.0.0",
    "minify": "^9.1.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "sass": "^1.55.0",
    "uglify-js": "^3.17.4",
    "vite": "^3.2.1"
  }
}
