{
  "name": "plasttic",
  "private": true,
  "type": "module",
  "version": "1.4.4",
  "description": "HTML Boilerplate, Atomic Design Sass Framework and Knowledge Hub",
  "keywords": [
    "plasttic",
    "template",
    "boilerplate",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monkey13-ws/Plasttic.git"
  },
  "author": "Monkey13",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monkey13-ws/Plasttic/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "docs/CHANGELOG.md",
    "docs/README.md",
    ".vscode/extensions.json",
    ".gitattributes",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/monkey13-ws/Plasttic#readme",
  "scripts": {
    "scss": "sass src/sass:public/css",
    "css": "postcss public/css/*.css -u autoprefixer cssnano -r -m",
    "copy:html": "copyfiles -u 1 ./src/*.html ./src/**/*.html public",
    "copy:js": "copyfiles -u 1 ./src/js/*.js public",
    "watch:html": "onchange 'src/*.html' 'src/**/*.html' -- npm run copy:html",
    "watch:sass": "sass --watch src/sass:public/css",
    "watch:js": "onchange 'src/js/*.js' -- npm run copy:js",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public --port 1337",
    "start": "npm-run-all copy:* scss --parallel watch serve",
    "build": "npm-run-all copy:* scss css",
    "lint": "stylelint 'src/sass/**/*.scss' 'src/sass/**/**/*.scss' 'src/sass/**/**/**/*.scss'",
    "lint:fix": "stylelint --fix 'src/sass/**/*.scss' 'src/sass/**/**/*.scss' 'src/sass/**/**/**/*.scss'",
  },
  "main": "index.html",
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.5.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.14",
    "onchange": "^7.1.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^7.8.2",
    "sass": "^1.55.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^4.3.0",
    "vite": "^3.2.1"
  }
}
